<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <kendesign translate="label" module="lowerpriceform">
            <label>Kendesign</label>
            <sort_order>100</sort_order>
        </kendesign>
    </tabs>
    <sections>
        <lowerpriceform_options translate="label" module="lowerpriceform">
            <label>Lowerpriceform</label>
            <tab>kendesign</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <lowerpriceform_configuration translate="label" module="lowerpriceform">
                    <label>Lowerpriceform options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<calendar_dateformat translate="label">
                            <label>Date format: </label>
                            <comment>The format for the DatePicker calendar</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>lowerpriceform/dateformat</source_model>
                        </calendar_dateformat>
                        <administrator_email translate="label">
                            <label>Recipient email: </label>
                            <comment>The store address which will receive the customer email</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>lowerpriceform/storeaddresses</source_model>                        	
                        </administrator_email>
                    </fields>
                </lowerpriceform_configuration>
            </groups>
        </lowerpriceform_options>
    </sections>
</config>